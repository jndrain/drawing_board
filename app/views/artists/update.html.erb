<a class="btn btn-default btn-sm" href="/profile/<%= session[:artist_id] %>">My Profile</a>
<a class="btn btn-default btn-sm" href="/generation">Create a Project</a>
<a class="btn btn-default btn-sm" href="/">Logout</a>
